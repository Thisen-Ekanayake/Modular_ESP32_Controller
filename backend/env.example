# TimescaleDB Configuration
# Copy this file to .env and update with your database credentials

# Database Connection
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=iot_monitoring
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=postgres

# Device Configuration
DEVICE_ID=ESP32_001

# Server Configuration
PORT=3000

# MQTT Broker Configuration
MQTT_BROKER=wss://broker.hivemq.com:8884/mqtt

# For Cloud Deployment (uncomment and update)
# TIMESCALEDB_HOST=your-cloud-db-host.com
# TIMESCALEDB_PORT=5432
# TIMESCALEDB_DATABASE=your_database_name
# TIMESCALEDB_USER=your_username
# TIMESCALEDB_PASSWORD=your_secure_password
# MQTT_BROKER=wss://your-mqtt-broker.com:8884/mqtt

